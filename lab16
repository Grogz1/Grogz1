#include <iostream>
#include <cmath>
using namespace std;

void four()
{
    int arr[N], s, L, R;
    {
        for (s = 0; s < N; s++)
        {
            cout << "Vvedite " << s + 1 << " znachenie massiva ";
            cin >> arr[s];
        }
        cout << "\nMassiv A\n";
        for (s = 0; s < N; s++)
            cout << arr[s] << ' ';

        L = 0;
        R = N - 1;
        cout << '\n';
        while (L <= R)
        {
            cout << arr[L];
            if (L == R)
                break;
            cout << arr[R];
            L++;
            R--;
        }

    }
}

void three()
{
    int N, sum = 0;
    cout << "-------------------------------------------------------------------------" << endl;
    cout << "3) Даны целые числа N (> 2), A и B. Сформировать и вывести целочисленный массив размера N, первый элемент которого равен A, второй равен B, а каждый последующий элемент равен сумме всех предыдущих" << endl;
    cout << "Введите целое число N: ";
    cin >> N;
    int arr[100];
    int A, B;
    cout << "Введите целые числа A и B: ";
    cin >> A >> B;
    for (int i = 2; i < N; ++i) 
    {
        arr[0] = A;
        arr[1] = B;
        sum = (arr[i - 2] + arr[i - 1]);
        arr[i] = sum;

    }
    for (int i = 0; i < N; i++) 
    {
        cout << arr[i] << endl;
    }
}

void two()
{
    int* A = new int[N];
    cout << "-------------------------------------------------------------------------" << endl;
    cout << "2) Дано целое число N (> 1), а также первый член A и знаменатель D геометрической прогрессии. Сформировать и вывести массив размера N, содержащий N первых членов данной прогрессии: A, A·D, A·D2 , A·D3 , . . ." << endl;
    cout << "Введите целое число N (>1): ";
    cin >> N;
    int arr[N];
    double A;
    cout << "Введите первый член A: ";
    cin >> A;
    arr[0] = A;
    double D;
    cout << "Введите знаменатель D геометрической прогрессии: ";
    cin >> D;
    int z = 1;
    for (int i = 0; i < N; ++i) {
        arr[i] = N * z;
        z *= D;
    }
    for (int i = 0; i < N; ++i) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main()
{
    setlocale(LC_ALL, "Russian");
    int a[100];
    int n;
    cout << "1) Дано целое число N (> 0). Сформировать и вывести целочисленный массив размера N, содержащий N первых положительных нечетных чисел: 1, 3, 5, . . . ." << endl;
    cout << "Введите величину массива N: ";
    cin >> n;
    for (int i = 0; i < n; i++)
    {
        a[i] = 1 + i * 2;
    }
    for (int i = 0; i < n; ++i) 
    {
        cout << "a[" << i << "]=" << a[i] << endl;
    }
    three();
    return 0;
}
